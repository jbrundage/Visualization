{
  "name": "@hpcc-js/comms",
  "version": "0.0.45",
  "description": "hpcc-js - Communications",
  "main": "build/comms.node.js",
  "module": "lib/index.node",
  "browser": "build/comms.js",
  "unpkg": "builds/comms.min.js",
  "types": "lib/index.node.d.ts",
  "files": [
    "lib/*",
    "lib-es6/*",
    "src/*.css",
    "dist/*"
  ],
  "scripts": {
    "clean": "rimraf lib && rimraf build",
    "compile": "tsc",
    "compile-watch": "tsc -w",
    "bundle-browser": "rollup -c -i lib/index.browser.js",
    "bundle-browser-watch": "npm run bundle-browser -- -w",
    "bundle-node": "rollup -c -f cjs -i lib/index.node.js -o build/comms.node.js",
    "bundle-node-watch": "npm run bundle-node -- -w",
    "bundle": "npm run bundle-browser && npm run bundle-node",
    "minimize-browser": "uglifyjs build/comms.js -c -m -o build/comms.min.js",
    "minimize-node": "uglifyjs build/comms.js -c -m -o build/comms.node.min.js",
    "minimize": "npm run minimize-browser && npm run minimize-node",
    "build": "npm run compile && npm run bundle",
    "watch": "concurrently --kill-others \"npm run compile-watch\" \"npm run bundle-browser-watch\" \"npm run bundle-node-watch\"",
    "docs": "typedoc --options tdoptions.json ."
  },
  "dependencies": {
    "@types/node": "8.0.51",
    "@hpcc-js/util": "^0.0.42",
    "d3-request": "1.0.5",
    "d3-time-format": "2.1.0",
    "es6-promise": "4.1.1",
    "request": "2.81.0",
    "safe-buffer": "5.0.1",
    "tmp": "0.0.33",
    "tslib": "1.8.0",
    "xmldom": "0.1.27"
  },
  "devDependencies": {
    "@hpcc-js/bundle": "^0.0.15",
    "@types/d3-request": "1.0.2",
    "@types/request": "0.0.41",
    "@types/xmldom": "0.1.29",
    "concurrently": "3.5.0",
    "rimraf": "2.6.1",
    "rollup": "0.51.3",
    "typedoc": "0.7.1",
    "typescript": "2.6.1",
    "uglify-js": "3.1.8"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hpcc-systems/Visualization.git"
  },
  "author": "Gordon Smith <gordonjsmith@gmail.com>",
  "contributors": [],
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/hpcc-systems/Visualization/issues"
  },
  "homepage": "https://github.com/hpcc-systems/Visualization"
}